<p>Your open bookings</p> <hr>
<% @requests.each do |request| %>
<%= request.room.name %>
<%= request.status %>
<%= request.comment %> <br>
<% if request.pending? %>
  <%= simple_form_for [:hospital, request] do |f| %>
    <%= f.input :status, as: :hidden, input_html: { value: 'confirmed'} %>
    <%= f.submit 'Accept', class: 'btn btn-info' %>
  <% end %>
  <%= simple_form_for request do |f| %>
    <%= f.input :status, as: :hidden, input_html: { value: 'rejected'} %>
    <%= f.submit 'Reject', class: 'btn btn-light' %>
  <% end %>
<% else %>
  <p class='booking-tag'><%= request.status %></p>
<% end %>
<%#= link_to "Accept", # %> <%#= link_to "Decline", # %>
<% end %> <br>
